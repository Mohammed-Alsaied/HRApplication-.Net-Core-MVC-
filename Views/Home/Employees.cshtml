@model Employee; //link between view and model
<!DocType html>
<html>

<head>
    <title></title>
    <style>
        .input-validation-error{
            border 1px red;
            background-color:red;
        }
        .validation-summary-errors{
            font:bolder;
            color:red;
        }
    </style>
</head>

<body>
    <div class="text-center">
    <h1 class="display-4">Employees</h1>
        <form asp-action="Employees" method="post" style="text-align:left">
         <div asp-validation-summary="All"></div>
           <div class="form-group">
            <label asp-for="EmployeeName">Employee Name</label>
               <input asp-for="EmployeeName"  class="form-control form-control-sm" placeholder="Enter Employee Name">
           </div>

           <div class="form-group">
            <label asp-for="Department">Department</label>
            <select asp-for="Department" class="form-control form-control-sm">
                <option>Selcet Department</option>
                <option value="IT">Information Technology</option>
                <option value="operation">Operation</option>
                <option value="finance">Finance</option>
                <option value="design">Design</option>
            </select>
           </div>

           <div class="form-check form-check-inline" >
            <label asp-for="isActive" class="form-check-label">isActive?</label>
               <input type="checkbox" asp-for="isActive" class="form-check-input" />
           </div>
           <div class="form-group">
               <label asp-for="JobTitle">Job Title</label>
               <input asp-for="JobTitle" class="form-control form-control-sm" placeholder="Enter Job Title"/>
           </div>
           <div class="form-group">
               <label asp-for="EmailAddres">Email Addres</label>
               <input type="email" asp-for="EmailAddres" class="form-control form-control-sm" placeholder="Enter Email Address"/>
           </div>
           <div class="form-group">
               <label asp-for="BirthDate">BirthDate</label>
               <input type="date" asp-for="BirthDate" class="form-control form-control-sm"/>
           </div>

           <button type="submit" class="btn btn-primary">Save</button>
        </form>
</div>
</body>
</html>